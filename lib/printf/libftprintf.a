#include "../inc/ft_printf.h"

size_t	ft_int_len(int n)
{
	int	i;

	i = 0;
	if (n == -2147483648)
		return (11);
	if (n == 0)
		return (i);
	if (n < 0)
	{
		n = -n;
		i++;
	}
	while (n > 0)
	{
		n /= 10;
		i++;
	}
	return (i);
}

void	ft_putnbr(int n)
{
	char	s[2];
	long	num;

	num = n;
	if (num < 0)
	{
		write(1, "-", 1);
		num = -num;
	}
	if (num >= 0)
	{
		if (n == 0)
			write(1, "0", 1);
		else
		{
			s[0] = (num % 10) + 48;
			num = num / 10;
			if (num > 0)
				ft_putnbr(num);
			write(1, &s[0], 1);
		}
	}
}

int	*ft_print_num(int num, int *len)
{
	if (num == 0)
		(*len)++;
	*len += ft_int_len(num);
	ft_putnbr(num);
	return (len);
}

