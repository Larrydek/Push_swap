#include "../inc/ft_printf.h"

void	ft_unsigned(unsigned int n, int *len)
{
	if (n > 9)
		ft_print_uint(n / 10, len);
	if (n <= 9)
	{
		ft_char(n + '0', len);
		return ;
	}
	ft_char((n % 10) + '0', len);
}

int	*ft_print_uint(unsigned int num, int *len)
{
	ft_unsigned(num, len);
	if (num == 0)
		return (len);
	while (num > 0)
		num = num / 10;
	return (len);
}

